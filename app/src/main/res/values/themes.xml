<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme for GoalGuru -->
    <style name="Base.Theme.GoalGuru" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary_green_dark</item>
        <item name="colorOnPrimaryContainer">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondary_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary_blue_dark</item>
        <item name="colorOnSecondaryContainer">@color/white</item>

        <!-- Status & Navigation bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_green_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primary_green_dark</item>

        <!-- Surface -->
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/on_surface_black</item>

        <!-- Error -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Public Theme Alias -->
    <style name="Theme.GoalGuru" parent="Base.Theme.GoalGuru" />

</resources>
