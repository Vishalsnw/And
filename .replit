run = "export JAVA_HOME=$(dirname $(dirname $(which java))) && ./gradlew assembleDebug"
[nix]
channel = "stable-25_05"

[env]
JAVA_HOME = "/nix/store/path-to-java"
ANDROID_HOME = "/nix/store/path-to-android"

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug"]

[workflows]
runButton = "Build APK"

[[workflows.workflow]]
name = "Build APK"
author = 45582021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export JAVA_HOME=$(dirname $(dirname $(which java))) && ./gradlew assembleDebug"
