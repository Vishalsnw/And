run = "./gradlew assembleDebug"
[nix]
channel = "stable-25_05"

[env]
JAVA_HOME = "$NIX_PROFILES/lib/openjdk"
ANDROID_HOME = "/home/runner/.android-sdk"
ANDROID_SDK_ROOT = "/home/runner/.android-sdk"
PATH = "$NIX_PROFILES/bin:/home/runner/.android-sdk/platform-tools:/home/runner/.android-sdk/build-tools/34.0.0:${PATH}"

[deployment]
run = ["sh", "-c", "./gradlew assembleDebug"]

[workflows]
runButton = "Build and Install APK"

[[workflows.workflow]]
name = "Build APK"
author = 45582021
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug"

[[workflows.workflow]]
name = "Build and Install APK"
author = 45600381
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew assembleDebug"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"APK built successfully! Find it in: app/build/outputs/apk/debug/\""
